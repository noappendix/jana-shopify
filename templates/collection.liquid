      <!-- End breadcrumb -->


      <!-- Begin collection description -->
      {% if collection.description != "" %}
        {{ collection.description }}
      {% endif %}
      <!-- End collection description -->

    </div>
  </div>
  <!-- End collection info -->

  <!-- Begin no products -->
  {% if collection.products.size == 0 %}
  <div class="row">
    <div class="span12 expanded-message">
      <p>No products found</p>
    </div>
  </div>
  {% endif %}
  <!-- End no products -->

  <div class="row p0">
    <div class="span2-product-loop">
      <h1>category</h1>
    </div>

    <!-- Begin sort collection -->
    <div class="span3-product-loop fl">
      {% if settings.collection_tags %}
        {% capture col_url%}{% if collection.url.size == 0 %}/collections/all{%else%}{{collection.url}}{%endif%}{%endcapture%}
        {% if collection.all_tags.size > 0 %}
        <div class="browse-tags">
          <label>Filter:</label>
          <select name="collection_tags" id="collection_tags" class="loc_on_change">
            <option value="{{ col_url }}">All items</option>
            {% for tag in collection.all_tags %}
              <option value="{{col_url}}/{{ tag | handle }}"{% if current_tags contains tag %} selected="selected"{%endif%}>{{ tag }}</option>
            {% endfor %}
          </select>
        </div>
        {% endif %}
      {% endif %}
    </div>
    <!-- End sort collection -->

    <div class="span3 fr">
      {% include 'pagination' %}
    </div>
  </div>

  <div class="row products">
    <div class="span2-product-loop">
      <ul class="unstyled">
        {% for link in linklists.shop-sidebar.links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="product-loop-container">
      {% for product in collection.products limit: settings.pagination_limit %}
      {% include 'product-loop' with collection.handle %}
      {% endfor %}
    </div>
  </div>

  <div class="row">
    <div class="span3 fr">
      {% include 'pagination' %}
    </div>
  </div>



  {% endpaginate %}


</div>