{% layout settings.customer_layout %}

<div id="customer-register">
  <div class="row">
    <div id="register" class="span12">
      <h2 class="title p30">Join Fast Love</h2>

	    {% form 'create_customer' %}

	      {{ form.errors | default_errors }}

	      <div id="first_name" class="clearfix large_form">
	        <label for="first_name" class="label p5">First Name</label>
	        <input type="text" value="" name="customer[first_name]" id="first_name" class="text tc p15" size="30" />
	      </div>

	      <div id="last_name" class="clearfix large_form">
	        <label for="last_name" class="label p5">Last Name</label>
	        <input type="text" value="" name="customer[last_name]" id="last_name" class="text tc p15" size="30" />
	      </div>

	      <div id="email" class="clearfix large_form">
	        <label for="email" class="label p5">Email Address</label>
	        <input type="email" value="" name="customer[email]" id="email" class="text tc p15" size="30" />
	      </div>

	      <div id="password" class="clearfix large_form">
	        <label for="password" class="label p5">Password</label>
	        <input type="password" value="" name="customer[password]" id="password" class="password text tc p15" size="30" />
	      </div>

	      <div class="action_bottom">
	        <input class="btn" type="submit" value="Join" />
	        <!-- <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span> -->
	      </div>
	      <div class="action_bottom">
	      	or <a href="{{ shop.url }}" class="text_underline">Return to Store</a>
	      </div>

	    {% endform %}

    </div><!-- #register -->
  </div><!-- .row -->
</div><!-- #customer-register -->
